.img,
.imgActive,
.round,
.square {
  position: absolute;
  width: 100%;
  height: 100%;
  filter: drop-shadow(0px 2px 20px rgba(57, 57, 57, 0.06));
  transform: translateZ(0); /* HACK 强制GPU渲染，解决 iOS 滤镜异常 */
}

/* 预置的图形样式 */
.preset {
  border: 2rpx solid transparent;
  background-image: linear-gradient(176deg, #f2f5fc 0%, #ffffff 68%);
}
.presetActive {
  border: 2rpx solid transparent;
  background-image: linear-gradient(155deg, #468cfb 6%, #6ba3fc 96%);
}
.round {
  border-radius: 100%;
}
.square {
  border-radius: 32rpx;
}

.icon-wrapper {
  position: relative;
  width: 64rpx;
  height: 64rpx;
}

.icon,
.iconActive,
.text,
.textActive {
  position: absolute;
  width: 100%;
  height: 100%;
}

.textActive {
  color: #fff !important;
}

.text-wrapper {
  height: 42rpx;
  width: 100%;
  position: relative;
}
