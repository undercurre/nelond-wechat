.wifi-item .left {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.wifi-strength {
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
}

.wifi-desc {
  font-size: 28rpx;
  color: #488fff;
  font-weight: 500;
}

.wifi-name {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  max-width: 370rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
}

.no-found-wifi {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}

.not-wifi {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.no-wifi-list {
  display: block;
  width: 480rpx;
  height: 400rpx;
  margin: 72rpx auto 48rpx;
}

.no-wifi-text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8a8a8f;
  letter-spacing: 0;
  text-align: center;
  line-height: 36rpx;
  font-weight: 400;
}

.no-found-device-wifi {
  text-align: center;
}
