.custom-dialog {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
}

.custom-mask {
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000000;
}

.custom-main {
  width: 540rpx;
  height: 530rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  background: #fafafa;
  border-radius: 10px;
  transform: translate(-50%, -50%);
}

.custom-title {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 10px;
  padding-top: 30px;
}

.close {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 100rpx auto 44rpx;
}

.custom-content {
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  line-height: 32rpx;
  font-weight: 500;
}

.content-text {
  line-height: 1.4;
}

.control {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #488fff;
  letter-spacing: 0;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.custom-dialog .cancel {
  /* float: left;
  margin-left: 50px; */
  flex: 0.7;
  border-radius: 48rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 16px;
  /* width: 140px; */
  color: #488fff;
  border: 2rpx solid #488fff;
  text-align: center;
  margin-top: 116rpx;
}

.custom-dialog .confirm {
  /* float: right; */
  width: 328rpx;
  background: #488fff;
  border-radius: 48rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 16px;
  /* width: 140px; */
  color: #ffffff;
  text-align: center;

  position: absolute;
  left: 106rpx;
  bottom: 48rpx;
}
