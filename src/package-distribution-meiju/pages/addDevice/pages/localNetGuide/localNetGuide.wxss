/* distribution-network/addDevice/pages/localNetGuide/localNetGuide.wxss */
.page {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  height: 110vh;
  padding-top: 8px;
}

.remark {
  margin-top: 8px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #c7c7cc;
  letter-spacing: 0;
  line-height: 16px;
  font-weight: 400;
  text-align: center;
}

.item-box {
  width: 100%;
}

.item {
  width: 343px;
  margin: auto;
  margin-top: 16px;
  padding: 0px 9px 30px;
  border-radius: 12px;
  overflow: hidden;
}

.title {
  padding: 0px 10px;
  box-sizing: border-box;
  height: 54px;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  line-height: 22px;
  font-weight: 600;
  border-bottom: 1px solid #d8d8d8;
}

.title-text {
  display: inline-block;
  line-height: 54px;
  margin-left: 16px;
}

.MR9 {
  margin-right: 7px;
}

.guide-img {
  display: block;
  width: 158px;
  height: 232px;
}

.step {
  width: 168px;
  float: left;
  margin-top: 11px;
}

.img-text {
  display: block;
  width: 100%;
  margin-top: 11px;
  text-align: center;
  font-size: 12px;
  color: #666666;
  letter-spacing: 0;
  line-height: 17px;
  font-weight: 400;
}
