.container {
  height: 100vh;
  width: 100vw;
  position: fixed;
}

.header {
  height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 60rpx;
  font-size: 18px;
  white-space: nowrap;
  position: fixed;
  top: 44rpx;
  left: 0;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back {
  position: absolute;
  left: 36rpx;
  display: inline-block;
  font-size: 32rpx;
  color: #000000;
}

.backIcon {
  position: absolute;
  left: 36rpx;
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
}

.title {
  display: flex;
  flex: 1;
  justify-content: center;
  font-size: 32rpx;
  color: #000000;
}

.notice {
  background: #f9f9f9;
  height: 72rpx;
  font-size: 24rpx;
  color: #8a8a8f;
  line-height: 72rpx;
  font-weight: 400;
  text-align: center;
}

.scrollView {
  max-height: calc(100vh - 360rpx);
}

.item {
  display: flex;
  flex-direction: row;
  position: relative;
}

.deviceImg {
  width: 96rpx;
  height: 96rpx;
  margin: 32rpx 24rpx 32rpx 32rpx;
}

.info {
  display: flex;
  flex-direction: column;
  margin-top: 32rpx;
}

.name {
  font-size: 32rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
}

.split {
  width: 2rpx;
  height: 48rpx;
  background: #e5e5e8;
}

.result {
  font-size: 24rpx;
  color: #8a8a8f;
  display: flex;
  margin-top: 16rpx;
}

@keyframes box-ani {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(360deg);
  }
}

.noticeIcon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 4rpx;
}

.roll {
  height: 40rpx;
  width: 40rpx;
  margin-right: 4rpx;
  animation: box-ani 4s infinite linear;
}

.setting {
  font-size: 28rpx;
  color: #666666;
  position: absolute;
  right: 38rpx;
  top: 72rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.deviceName {
  margin-right: 12rpx;
}

.room {
  margin-left: 12rpx;
}

.noticeTxt {
  width: calc(100vw - 210rpx);
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line {
  height: 2rpx;
  margin-left: 152rpx;
  background: #f2f2f2;
}

.settingTxt {
  margin-right: 14rpx;
}

.nextIcon {
  width: 20rpx;
  height: 20rpx;
}

.btn {
  width: 686rpx;
  height: 92rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  background: #488fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  position: fixed;
  bottom: 48rpx;
  line-height: 92rpx;
}

.unfinish {
  opacity: 0.6;
}
