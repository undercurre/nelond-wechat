/* addDevice//pages/addFail/addFail.wxss */
.page {
  font-family: PingFangSC-Medium;
}
.block {
  display: block;
  text-align: center;
}

.thick {
  color: #ff9500;
}

.blue {
  color: rgb(52, 106, 224);
}

.title {
  text-align: center;
  font-size: 48rpx;
  color: #ff9500;
  letter-spacing: 0;
  margin-top: 30rpx;
  line-height: 48rpx;
  font-weight: 500;
  font-size: 28px;
}

.scan-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.link-flow {
  width: 100%;
  margin: 112rpx auto 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.phone-img {
  width: 196rpx;
  height: 196rpx;
}

.blue-tooth-img {
  width: 30rpx;
  height: 30rpx;
  margin: 0px 30rpx;
}

.device-img {
  width: 196rpx;
  height: 196rpx;
}

.fail-title {
  font-size: 40rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
  font-weight: 500;
}

.fail-code {
  margin-top: 16rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #8a8a8f;
  letter-spacing: 0;
  text-align: center;
  line-height: 28rpx;
  font-weight: 400;
}

.reason {
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 0;
  line-height: 28rpx;
  font-weight: 400;
  margin-top: 36rpx;
}

.retry {
  width: 91.5%;
  height: 92rpx;
  margin: auto;
  margin-top: 44vh;
  line-height: 92rpx;
  text-align: center;
  border-radius: 48rpx;
  background: #488fff;
  color: #fff;
}

.back-to-index {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #488fff;
  text-align: center;
  line-height: 16px;
  font-weight: 500;
  text-align: center;
  margin-top: 46rpx;
}
