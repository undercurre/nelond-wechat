<van-popup
  show="{{ show }}"
  z-index="1002"
  round
  position="bottom"
  bind:close="handleClose"
  closeable
>
  <view class="w-750rpx relative flex flex-col items-center">
    <view class="mt-44rpx text-center">
      <text class="h-50rpx text-36rpx text-black-2a font-medium">{{title}}</text>
    </view>

    <curtain-slider
      class="mt-68rpx"
      value="{{curtain_position}}"
      bind:slideEnd="handleChange"
      bind:change="handleChange"
    ></curtain-slider>
    <view class="h-96rpx"></view>
    <view class="w-560rpx">
      <van-button
        type="primary"
        size="large"
        bind:click="handleConfirm"
        >确定</van-button
      >
    </view>
    <view style="height: 64rpx"></view>
  </view>
</van-popup>

<van-toast id="van-toast" />
