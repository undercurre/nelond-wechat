.mz-button {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #eff0f3;
  border-radius: 40rpx;
  padding: 0 20rpx;
}

.icon-wrapper {
  position: relative;
  width: 48rpx;
  height: 48rpx;
}

.icon,
.iconActive,
.text,
.textActive {
  position: absolute;
  width: 100%;
  height: 100%;
}

.textActive {
  color: #fff !important;
}

.text-wrapper {
  width: 80rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin-left: 16rpx;
  font-size: 24rpx;
  position: relative;
}
