<view class="-z-1 fixed left-0 top-0 w-100vw h-100vh">
  <image
    src="{{defaultImgDir}}/bg-login.png"
    class="w-100vw h-100vh"
  ></image>
</view>

<nav-bar
  left-arrow
  bind:leftTap="goBack"
></nav-bar>
<view
  class="flex-col-center w-750rpx"
  style="margin-top: {{marginTop}}px;"
>
  <image
    class="w-144rpx h-144rpx"
    src="/assets/img/login/logo.png"
  ></image>
  <text
    class="text-48rpx font-semibold mt-48rpx ml-12rpx"
    style="letter-spacing: 8.8rpx"
    >美的商照</text
  >
</view>

<block wx:if="{{!isLan}}">
  <view
    wx:if="{{needCaptcha}}"
    class="px-32rpx mt-50rpx mb-128rpx"
  >
    <view class="mx-24rpx mb-16rpx">
      <text class="text-24rpx link">首次登录需要先激活账号，已向您的手机号发送验证码</text>
    </view>

    <van-field
      value=""
      custom-style="padding: 32rpx 32rpx; margin: 16rpx 0; background-color: #F6FAFD;border-radius: 24rpx;"
      type="number"
      maxlength="{{6}}"
      placeholder="请输入短信验证码{{validTime ? '（' + validTime + 's）' : ''}}"
      bind:change="captchaChange"
    />
    <van-button
      wx:if="{{validTime}}"
      bind:tap="handleLoginWithCaptcha"
      block
      disabled="{{!captchaInput}}"
      type="primary"
      size="large"
      >激活账号并登录
    </van-button>
    <van-button
      wx:else
      bind:tap="queryCaptcha"
      block
      type="primary"
      size="large"
      >重新获取验证码
    </van-button>
  </view>

  <view
    wx:else
    class="px-32rpx mt-50rpx mb-128rpx"
  >
    <include src="./agree.wxml" />

    <van-button
      open-type="getPhoneNumber|agreePrivacyAuthorization"
      bind:tap="handleLoginTap"
      bindgetphonenumber="handleLoginClick"
      block
      disabled="{{!isAgree}}"
      type="primary"
      size="large"
      >快速登录</van-button
    >
  </view>
</block>

<view
  wx:else
  class="grow px-32rpx pt-100rpx"
>
  <van-field
    model:value="{{ mobilePhone }}"
    placeholder="请输入手机号"
    custom-style="margin-bottom: 32rpx;margin-top: 40rpx;padding: 32rpx 32rpx;border-radius: 24rpx;"
    clearable="{{true}}"
    border="{{false}}"
  >
  </van-field>

  <van-field
    model:value="{{ captchaInput }}"
    placeholder="请输入短信验证码"
    custom-style="margin-bottom: 32rpx;margin-top: 40rpx;padding: 32rpx 32rpx;border-radius: 24rpx;"
    clearable="{{true}}"
    border="{{false}}"
  >
    <van-button
      slot="button"
      type="primary"
      size="mini"
      custom-style="font-size: 28rpx;padding-left: 20rpx;padding-right: 20rpx;"
      plain
      bind:click="queryCaptcha"
      disabled="{{!mobilePhone || validTime > 0}}"
    >
      {{ smsBtnText }}
    </van-button>
  </van-field>

  <include src="./agree.wxml" />

  <view class="flex flex-col mt-32rpx">
    <van-button
      block
      type="primary"
      size="large"
      bind:click="toLogin"
      disabled="{{!isAgree || !mobilePhone || !captchaInput}}"
      >登录</van-button
    >
  </view>
</view>

<van-toast id="van-toast" />

<van-dialog id="van-dialog" />
