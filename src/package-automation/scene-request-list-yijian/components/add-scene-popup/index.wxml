<import src="/commons/templates/popup.wxml" />
<van-popup show="{{ show }}" z-index="1000" round position="bottom" bind:close="handleClose" closeable>
  <view class="w-750rpx h-592rpx relative flex flex-col items-center">
    <text class="h-50rpx text-36rpx text-hex-27282a mt-40rpx font-semibold">关联智能开关</text>
    <text class="h-40rpx text-28rpx text-black-tips mt-8rpx font-normal">非必选项</text>

    <view class="w-686rpx h-146rpx mt-44rpx mb-80rpx relative flex justify-between items-center" bindtap="handleLinkSwitchPopup">
      <view class="flex flex-col items-start ml-160rpx justify-center" slot="title">
        <text class="text-32rpx text-hex-373cdf font-medium h-44rpx">关联智能开关</text>
        <text class="text-24rpx text-tip-scene font-normal h-34rpx mt-10rpx">可通过智能开关一键触发场景</text>
      </view>
      <view class="flex items-center mr-42rpx">
        <text class="text-black-tips text-28rpx mr-14rpx">{{linkSwitch?'已关联':'未关联'}}</text>
        <van-icon name="arrow" color="#A2A2A2" size="16" />
      </view>

      <image src="../../assets/link_bg.png" class="w-686rpx h-146rpx absolute left-0 top-0 -z-1"></image>
    </view>

    <view class="flex w-686rpx">
      <van-button type="primary" class="flex-1" size="large" bind:click="handleConfirm">完成</van-button>
    </view>
    <view style="height: calc(96rpx - env(safe-area-inset-bottom))"></view>
  </view>

  <select-card-popup show="{{showLinkPopup}}" title="关联智能开关" showCancel="{{false}}" list="{{list}}" selectList="{{linkSelectList}}" bind:select="handleLinkSelect" bind:close="handleLinkPopupClose" bind:confirm="handleLinkPopupConfirm"></select-card-popup>
</van-popup>

<van-toast id="van-toast" />

<van-dialog id="van-dialog" confirm-button-color="#27282A" cancel-button-color="#27282A" />
