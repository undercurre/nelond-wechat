<!-- 背景 -->
<view class="w-100vw h-100vh fixed left-0 top-0 bg-hex-f4f8ff bg-z-index-1"></view>
<view class="fixed left-0 top-0 w-100vw h-50vh bg-z-index" style="background: linear-gradient(180deg, rgba(87, 105, 255, 0.1) 0%, rgba(87, 105, 255, 0) 100%)"></view>
<view class="h-100vh flex flex-col items-center">
  <!-- 标题 -->
  <nav-bar title="日志" left-arrow bind:leftTap="goBack"></nav-bar>

  <view class="flex-1 w-750rpx" id="content">
    <scroll-view scroll-y="{{true}}" style="height: {{contentHeight}}px;" lower-threshold="{{100}}" bindscrolltolower="onLoadmore" refresher-enabled bindrefresherrefresh="onRefresh" refresher-triggered="{{isRefreshing}}">
      <view wx:if="{{autoSceneLogLength}}">
        <view class="h-6rpx"></view>
        <view wx:for="{{autoSceneLog}}" wx:for-item="logs" wx:for-index="date" wx:key="date">
          <view class="mb-24rpx mt-42rpx ml-46rpx">
            <text class="text-hex-555659 text-28rpx">{{date}}</text>
          </view>
          <van-cell-group inset border="{{false}}">
            <van-cell value-class="cell-value" wx:key="id" wx:for="{{logs}}" title="{{item.sceneName}}" label="{{item.actionTime}}" center title-style="font-weight: 500;flex:2;" border="{{index === logs.length - 1 ? false : true}}" value="{{item.errorCode === 0 ? '已执行' : '执行失败'}}">
              <view slot="icon" class="rounded-32rpx p-16rpx mr-32rpx">
                <image class="w-72 h-72 bg-hex-F5F5F5 rounded-full" src="{{sceneImgDir}}/{{item.sceneIcon}}.png"></image>
              </view>
            </van-cell>
          </van-cell-group>
        </view>
        <view class="w-full flex justify-center" wx:if="{{!isRefreshing &&isAllLogs}}">
          <text class="text-hex-555659 text-28rpx">已加载全部日志</text>
        </view>
        <view class="h-32rpx"></view>
      </view>
      <view wx:else>
        <view class="h-102rpx"></view>
        <view class="flex items-center flex-col w-750rpx">
          <image src="{{defaultImgDir}}/no-log.png" class="w-300rpx h-300rpx"></image>
          <text class="text-32rpx text-black-59 mt-96rpx">尚未有日志记录</text>
        </view>
      </view>
    </scroll-view>
  </view>
</view>

<van-toast id="van-toast" />
