<view class="w-750rpx flex flex-col">
  <view class="flex">
    <text class="ml-48rpx text-black-59 font-normal text-28rpx">功能设置</text>
  </view>
  <view>
    <van-cell-group inset>
      <van-cell
        wx:if="{{isD3 && canEditDevice}}"
        title="更改Wi-Fi"
        bind:click="toChangeWifi"
        is-link
      ></van-cell>

      <van-cell
        wx:if="{{isHost}}"
        title="信道"
        bind:click="toggleActionSheet"
        is-link="{{!isRelease && canEditDevice}}"
        value="{{channelText}}"
      ></van-cell>

      <van-cell
        wx:if="{{canEditDevice}}"
        title="网关日志"
        border="{{false}}"
      >
        <van-button
          slot="right-icon"
          type="primary"
          round
          size="small"
          bind:click="uploadDeviceLog"
          >日志上传</van-button
        >
      </van-cell>
    </van-cell-group>
  </view>
</view>

<van-popup
  show="{{ isShowChannelList }}"
  bind:close="toggleActionSheet"
  round
  position="bottom"
>
  <van-picker
    class="mt-40rpx"
    columns="{{ columns }}"
    bind:cancel="toggleActionSheet"
    bind:confirm="onSelectChannel"
    show-toolbar
    title="信道选择"
  />
</van-popup>

<van-toast id="van-toast" />
